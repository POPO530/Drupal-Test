{% include '@helloworld/tab-template.html.twig' %}

{% if variables is not empty %}
    <!-- 変数が空でない場合、連絡先のテーブルを表示 -->
    <table>
        <thead>
            <!-- テーブルのヘッダー行 -->
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Message</th>
                <th>Actions</th> <!-- アクション列を追加 -->
            </tr>
        </thead>
        <tbody>
            <!-- 変数ごとに行を反復処理 -->
            {% for variable in variables %}
                <tr>
                    <td>{{ variable.name }}</td>
                    <td>{{ variable.email }}</td>
                    <td>{{ variable.phone }}</td>
                    <td>{{ variable.message }}</td>
                    <td>
                        <!-- 編集リンク -->
                        <a href="/test/contact/edit/{{ variable.id }}">Edit</a>
                        <!-- 削除リンク -->
                        <a href="/test/contact/delete/{{ variable.id }}" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <!-- 変数が空の場合、メッセージを表示 -->
    <p>No contacts found.</p>
{% endif %}